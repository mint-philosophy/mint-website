<section class="subscribe-section">
  <div class="container">
    <h3 data-reveal>Subscribe to our newsletter</h3>
    <p data-reveal>Get the latest from MINT Lab delivered to your inbox.</p>
    <form data-members-form="subscribe" data-reveal>
      <input type="email" required placeholder="your@email.com" data-members-email>
      <button type="submit">Subscribe</button>
      <p class="subscribe-message" data-members-error></p>
      <p class="subscribe-message success" data-members-success style="display:none">Check your inbox for a confirmation email.</p>
    </form>
  </div>
</section>
